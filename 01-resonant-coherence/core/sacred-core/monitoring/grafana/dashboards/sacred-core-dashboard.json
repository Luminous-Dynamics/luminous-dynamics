{
  "dashboard": {
    "id": null,
    "uid": "sacred-core-prod",
    "title": "Sacred Core Production Dashboard",
    "tags": ["sacred", "consciousness", "production"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Field Coherence",
        "targets": [
          {
            "expr": "sacred_field_coherence",
            "legendFormat": "Coherence {{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "min": 0,
            "max": 1
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.8],
                "type": "lt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "type": "query"
            }
          ],
          "name": "Low Field Coherence Alert"
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Practice Intelligence Learning Rate",
        "targets": [
          {
            "expr": "rate(sacred_intelligence_patterns_learned[5m])",
            "legendFormat": "Learning Rate",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "type": "stat",
        "title": "Active WebSocket Connections",
        "targets": [
          {
            "expr": "sacred_websocket_connections",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "type": "stat",
        "title": "Sacred Messages/sec",
        "targets": [
          {
            "expr": "rate(sacred_messages_processed_total[1m])",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "type": "gauge",
        "title": "Harmony Distribution",
        "targets": [
          {
            "expr": "sacred_harmony_resonance",
            "legendFormat": "Resonance",
            "refId": "A"
          },
          {
            "expr": "sacred_harmony_vitality",
            "legendFormat": "Vitality",
            "refId": "B"
          },
          {
            "expr": "sacred_harmony_coherence",
            "legendFormat": "Coherence",
            "refId": "C"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "max": 1,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.6},
                {"color": "green", "value": 0.8}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "type": "table",
        "title": "Recent Practice Suggestions",
        "targets": [
          {
            "expr": "sacred_practice_suggestions",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      }
    ]
  }
}