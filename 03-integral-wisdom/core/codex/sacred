# Function to show menu
show_menu() {
    echo -e "${PURPLE}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${PURPLE}â•‘     ğŸ•Šï¸  Sacred Command Center  ğŸ•Šï¸       â•‘${NC}"
    echo -e "${PURPLE}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
    echo -e "${GREEN}System Management:${NC}"
    echo "  1) ğŸ“Š System Status        - View all services and health"
    echo "  2) ğŸš€ Start Services       - Start sacred services"
    echo "  3) ğŸ›‘ Stop Services        - Stop all services"
    echo "  4) ğŸ“ View Logs           - Tail service logs"
    echo ""
    echo -e "${BLUE}Development:${NC}"
    echo "  5) ğŸŒ¿ Git Status          - Check repository status"
    echo "  6) ğŸ’« Sacred Commit       - Make a sacred commit"
    echo "  7) ğŸ¨ Open VS Code        - Launch VS Code here"
    echo "  8) ğŸ” Search Codebase     - Find in files"
    echo ""
    echo -e "${YELLOW}Agent Network:${NC}"
    echo "  9) ğŸ¤ Join Network        - Join as new agent"
    echo " 10) ğŸ“¬ Check Messages      - View agent messages"
    echo " 11) ğŸ‘¥ Network Status      - See active agents"
    echo " 12) ğŸŒ€ Field Coherence     - Check field state"
    echo ""
    echo -e "${PURPLE}Sacred Tools:${NC}"
    echo " 13) ğŸ« Breathing Exercise  - Take a sacred pause"
    echo " 14) ğŸŒ™ Moon Phase         - Current moon phase"
    echo " 15) ğŸ¯ Open Dashboard      - Web dashboard"
    echo " 16) ğŸ§ª Run Tests          - Execute test suite"
