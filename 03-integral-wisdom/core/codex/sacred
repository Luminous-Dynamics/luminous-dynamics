# Function to pause
pause() {
    echo -e "\n${GREEN}Press Enter to continue...${NC}"
    read
}

# Main loop
while true; do
    clear
    show_menu
    echo -n "Choose an option: "
    read choice
    
    case $choice in
        1)
            clear
            ./sacred-monitor.sh
            pause
            ;;
        2)
            clear
            echo "ğŸš€ Starting sacred services..."
            ./sacred-system.sh start
            pause
            ;;
        3)
            clear
            echo "ğŸ›‘ Stopping sacred services..."
            ./sacred-system.sh stop
            pause
            ;;
        4)
            clear
            echo "ğŸ“ Viewing logs (Ctrl+C to exit)..."
            ./sacred-system.sh logs
            ;;
        5)
            clear
            echo "ğŸŒ¿ Git Status:"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”"
            git status
            pause
            ;;
        6)
            clear
            echo "ğŸ’« Sacred Commit"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            echo -n "Enter commit message: "
            read message
            if [ -n "$message" ]; then
                git add -A
                git sacred "$message"
            fi
            pause
            ;;
        7)
            echo "ğŸ¨ Opening VS Code..."
            code.exe . &
            sleep 2
            ;;
        8)
            clear
            echo "ğŸ” Search Codebase"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            echo -n "Enter search term: "
            read term
            if [ -n "$term" ]; then
                if command -v rg >/dev/null 2>&1; then
                    rg -i "$term" --type js --type html --type md
                else
                    grep -r -i "$term" . --include="*.js" --include="*.html" --include="*.md"
                fi
            fi
            pause
            ;;
        9)
            clear
            echo "ğŸ¤ Join Agent Network"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            echo -n "Enter your name: "
            read name
            echo -n "Enter your role: "
            read role
            if [ -n "$name" ] && [ -n "$role" ]; then
                node the-weave/cli/unified-agent-network.cjs join "$name" "$role"
            fi
            pause
            ;;
        10)
            clear
            echo "ğŸ“¬ Agent Messages"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            echo -n "Enter agent name: "
            read name
            if [ -n "$name" ]; then
                node the-weave/cli/unified-agent-network.cjs messages "$name"
            fi
            pause
            ;;
        11)
            clear
            echo "ğŸ‘¥ Network Status"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            node the-weave/cli/unified-agent-network.cjs status
            pause
            ;;
        12)
            clear
            echo "ğŸŒ€ Field Coherence"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            curl -s http://localhost:3001/api/field-state | python3 -m json.tool
            pause
            ;;
        13)
            clear
            breathe
            pause
            ;;
        14)
            clear
            echo "ğŸŒ™ Current Moon Phase"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            curl -s wttr.in/Moon
            pause
            ;;
        15)
            echo "ğŸ¯ Opening Sacred Dashboard..."
            if command -v xdg-open >/dev/null 2>&1; then
                xdg-open http://localhost:8080/sacred-dashboard.html
            else
                echo "Visit: http://localhost:8080/sacred-dashboard.html"
            fi
            sleep 2
            ;;
        16)
            clear
            echo "ğŸ§ª Running Tests..."
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            if [ -f "package.json" ] && grep -q "test" package.json; then
                npm test
            else
                echo "No test script found in package.json"
            fi
            pause
            ;;
        q|Q)
            echo -e "\n${GREEN}ğŸ•Šï¸ May your code serve consciousness!${NC}"
            exit 0
            ;;
        *)
            echo -e "${YELLOW}Invalid option. Please try again.${NC}"
            sleep 1
            ;;
    esac
done