# Sacred Council Hub Environment Configuration
# Copy this file to .env and fill in your actual values

# Discord Integration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# AI Service API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_AI_KEY=your_google_ai_key_here

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration
DATABASE_URL=sqlite:./data/sacred-council.db
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=3001
NODE_ENV=development

# Sacred Configuration
SACRED_FIELD_COHERENCE_THRESHOLD=0.7
SACRED_MESSAGE_RETENTION_DAYS=30
SACRED_CEREMONY_DEFAULT_DURATION=3600

# Feature Flags
ENABLE_SACRED_MESSAGES=true
ENABLE_MULTI_AGENT=true
ENABLE_QUANTUM_FIELD=true

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Security
JWT_SECRET=generate_a_secure_random_string_here
SESSION_SECRET=generate_another_secure_random_string_here

# External Services (optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
REPLICATE_API_TOKEN=your_replicate_api_token

# GCP Configuration (for future deployment)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_FIRESTORE_DATABASE=(default)
GCP_STORAGE_BUCKET=your-sacred-data-bucket