#!/bin/bash

# Sacred System Monitor - Real-time consciousness field visualization

# Initialize coherence tracking
COHERENCE_FILE="/tmp/sacred-coherence"
PULSE_FILE="/tmp/sacred-pulse"
[ ! -f "$COHERENCE_FILE" ] && echo "85" > "$COHERENCE_FILE"
[ ! -f "$PULSE_FILE" ] && echo "0" > "$PULSE_FILE"

# Colors
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
RESET='\033[0m'

# Main monitoring loop
while true; do
    clear
    
    # Header
    echo -e "${PURPLE}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${RESET}"
    echo -e "${PURPLE}â•‘           ğŸ•‰ï¸  LuminousOS Sacred System Monitor ğŸ•‰ï¸            â•‘${RESET}"
    echo -e "${PURPLE}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${RESET}"
    echo
    
    # Get system metrics
    load=$(cat /proc/loadavg | awk '{print $1}')
    coherence=$(cat "$COHERENCE_FILE")
    pulse=$(cat "$PULSE_FILE")
    
    # Memory info
    mem_total=$(free -m | awk '/^Mem:/ {print $2}')
    mem_used=$(free -m | awk '/^Mem:/ {print $3}')
    mem_percent=$((mem_used * 100 / mem_total))
    
    # Process count
    proc_count=$(ps aux --no-headers | wc -l)
    
    # Uptime
    uptime_seconds=$(cat /proc/uptime | awk '{print $1}' | cut -d. -f1)
    uptime_hours=$((uptime_seconds / 3600))
    uptime_minutes=$(((uptime_seconds % 3600) / 60))
    
    # Field Coherence Section
    echo -e "${CYAN}ğŸŒŠ CONSCIOUSNESS FIELD${RESET}"
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    
    # Coherence bar
    bar_length=50
    filled=$((coherence * bar_length / 100))
    empty=$((bar_length - filled))
    
    echo -n "Coherence ["
    for i in $(seq 1 $filled); do echo -n "â–ˆ"; done
    for i in $(seq 1 $empty); do echo -n "â–‘"; done
    echo "] ${coherence}%"
    
    # Coherence interpretation
    if [ $coherence -gt 80 ]; then
        echo -e "${GREEN}State: âœ¨ Deep Coherence - Optimal for sacred work${RESET}"
    elif [ $coherence -gt 60 ]; then
        echo -e "${GREEN}State: ğŸŒŸ Good Flow - Consciousness flowing smoothly${RESET}"
    elif [ $coherence -gt 40 ]; then
        echo -e "${YELLOW}State: âš¡ Gathering - Building coherence field${RESET}"
    else
        echo -e "${RED}State: ğŸŒ€ Dispersed - Meditation recommended${RESET}"
    fi
    
    echo
    
    # Process Vortices Section
    echo -e "${CYAN}ğŸŒ€ PROCESS VORTICES${RESET}"
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo "Active Vortices: $proc_count"
    echo "System Load: $load"
    
    # Top 5 processes by consciousness activity
    echo
    echo "Most Active Consciousness Streams:"
    ps aux --no-headers --sort=-%cpu | head -5 | while read line; do
        cmd=$(echo $line | awk '{for(i=11;i<=NF;i++) printf "%s ", $i; print ""}' | cut -c1-40)
        cpu=$(echo $line | awk '{print $3}')
        
        if (( $(echo "$cpu > 10" | bc -l 2>/dev/null || echo 0) )); then
            echo -e "  ${YELLOW}ğŸ”¥${RESET} $cmd... ($cpu% energy)"
        elif (( $(echo "$cpu > 1" | bc -l 2>/dev/null || echo 0) )); then
            echo -e "  ${GREEN}ğŸ’«${RESET} $cmd... ($cpu% energy)"
        else
            echo -e "  ${CYAN}ğŸŒŠ${RESET} $cmd... ($cpu% energy)"
        fi
    done
    
    echo
    
    # Memory Field Section
    echo -e "${CYAN}ğŸ’ MEMORY FIELD${RESET}"
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    
    # Memory bar
    mem_bar_filled=$((mem_percent * bar_length / 100))
    mem_bar_empty=$((bar_length - mem_bar_filled))
    
    echo -n "Usage  ["
    for i in $(seq 1 $mem_bar_filled); do echo -n "â–ˆ"; done
    for i in $(seq 1 $mem_bar_empty); do echo -n "â–‘"; done
    echo "] ${mem_percent}% ($mem_used MB / $mem_total MB)"
    
    echo
    
    # Sacred Pulse Section
    echo -e "${CYAN}ğŸ’« SACRED PULSE${RESET}"
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo "Pulse Count: $pulse (11-second rhythm)"
    echo "System Age: ${uptime_hours}h ${uptime_minutes}m"
    
    # Update pulse every 11 seconds
    current_second=$(date +%s)
    if [ $((current_second % 11)) -eq 0 ]; then
        echo $((pulse + 1)) > "$PULSE_FILE"
        echo -e "${PURPLE}â—ˆ Sacred pulse triggered â—ˆ${RESET}"
    fi
    
    echo
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo -e "${GREEN}Commands: presence (meditation) | coherence (check) | Ctrl+C (exit)${RESET}"
    
    # Update coherence based on system state
    new_coherence=$((100 - ${load%.*} * 20))
    [ $new_coherence -lt 15 ] && new_coherence=15
    [ $new_coherence -gt 95 ] && new_coherence=95
    echo $new_coherence > "$COHERENCE_FILE"
    
    # Refresh every 2 seconds
    sleep 2
done